<h2>Login</h2>
<link rel="stylesheet" href="./css/login.css">

<form id="loginForm"class="form login-form" method="POST">
  <div class="form-group">
    <label for="email-login">email:</label>
    <input class="form-input" type="text" id="email-login" name="email"/>
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input" type="password" id="password-login" name="password"/>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">login</button>
  </div>
  {{!-- this is a link disguised as a button that redirects to signup page --}}
  <div class="form-group">
    <button class ="btn btn-primary" type="submit"><a href="/signup">register</a></button>
  </div>
</form>

<script src="/js/login.js"></script>
