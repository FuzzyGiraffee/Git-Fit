<!DOCTYPE html>
  <script type='importmap'>
      {
        "imports": {
          "@fullcalendar/core": "https://cdn.skypack.dev/@fullcalendar/core@6.1.7",
          "@fullcalendar/interaction": "https://cdn.skypack.dev/@fullcalendar/interaction@6.1.",
          "@fullcalendar/daygrid": "https://cdn.skypack.dev/@fullcalendar/daygrid@6.1.7",
          "@fullcalendar/timegrid": "https://cdn.skypack.dev/@fullcalendar/timegrid@6.1.7",
          "@fullcalendar/list": "https://cdn.skypack.dev/@fullcalendar/list@6.1.7"
          
        }
      }
    </script>
    <script type='module'>
      import { Calendar } from '@fullcalendar/core'
      import dayGridPlugin from '@fullcalendar/daygrid'
      import interactionPlugin from '@fullcalendar/daygrid'
      import timeGridPlugin from '@fullcalendar/timegrid'
      import listPlugin from '@fullcalendar/list'

      document.addEventListener('DOMContentLoaded', function() {
        const calendarEl = document.getElementById('calendar')
        const calendar = new Calendar(calendarEl, {
          plugins: [dayGridPlugin, interactionPlugin, timeGridPlugin, listPlugin],
          initialview: 'timeGridWeek',
          selectable: true,
          nowIndicator: true,
          headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
          }

        })
        calendar.render()
      })
</script>
<html>
  <head>
    <title>Fitness Recommendations</title>
  </head>
  <body>
    <header>
      <h1>Fitness Recommendations</h1>
    </header>
    <main>
      <section>
        <h2>Recommended Workouts</h2>
        <p>Here are some recommended workouts:</p>
        <ul>
          <li>Cardiovascular exercise</li>
          <li>Strength training</li>
          <li>Flexibility exercises</li>
        </ul>
      </section>
      <section>
        <h2>Recommended Days</h2>
        <p>We recommend exercising at least 3-5 days per week.</p>
      </section>
      <section>
        <h2>Workout Schedule</h2>
        <p>Select which days of the week you would like to work out:</p>
        <form>
          <label for="monday">Monday:</label>
          <input type="checkbox" id="monday" name="day" value="monday">
          <br>
          <label for="tuesday">Tuesday:</label>
          <input type="checkbox" id="tuesday" name="day" value="tuesday">
          <br>
          <label for="wednesday">Wednesday:</label>
          <input type="checkbox" id="wednesday" name="day" value="wednesday">
          <br>
          <label for="thursday">Thursday:</label>
          <input type="checkbox" id="thursday" name="day" value="thursday">
          <br>
          <label for="friday">Friday:</label>
          <input type="checkbox" id="friday" name="day" value="friday">
          <br>
          <label for="saturday">Saturday:</label>
          <input type="checkbox" id="saturday" name="day" value="saturday">
          <br>
          <label for="sunday">Sunday:</label>
          <input type="checkbox" id="sunday" name="day" value="sunday">
        </form>
      </section>
      <div id="calendar"></div>
    </main>
  </body>
</html>
